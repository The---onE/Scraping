@{
    ViewBag.Title = "省市面积";
    Layout = "~/Views/Shared/ChinaMap.cshtml";
}

<script type="text/javascript">
    $(function () {
        $.ajax({
            url: "/Content/china_area.json",
            success: function (result) {
                dataOption = {
                    visualMap: {
                        min: 0,
                        max: 1250000,
                        text: ['High', 'Low'],
                        realtime: false,
                        calculable: true,
                        color: ['orangered', 'yellow', 'lightskyblue']
                    },
                    series: [
                    {
                        name: '国土面积',
                        type: 'map',
                        mapType: 'china',
                        roam: true,
                        itemStyle: {
                            emphasis: { label: { show: true } }
                        },
                        data: result
                    }
                    ]
                }

                myChart.setOption(dataOption);
            }

        });
    })
</script>
