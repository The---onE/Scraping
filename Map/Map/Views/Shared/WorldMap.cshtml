
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/echarts.min.js"></script>
    <script src="~/Scripts/world.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
</head>
<body>
    <div id="main" style="width: 1200px;height:600px;"></div>
    <script type="text/javascript">
        // 基于准备好的dom，初始化echarts实例
        var myChart = echarts.init(document.getElementById('main'));

        var China = 932;
        var Shandong = 15;
        var Tianjin = 1;

        var baseCountry = undefined;
        var baseArea = -1;

        // 指定图表的配置项和数据
        var option = {
            title: {
                text: '国土面积',
                left: 'center',
                top: 'top'
            },
            tooltip: {
                trigger: 'item',
                formatter: function (params) {
                    var value = (params.value + '').split('.');
                    var valueString = value[0].replace(/(\d{1,3})(?=(?:\d{3})+(?!\d))/g, '$1,');
                    var wan = value[0] / 10000;
                    var ChinaPro = wan / China;
                    var ShandongPro = wan / Shandong;
                    var TianjinPro = wan / Tianjin;
                    var re = params.seriesName + '<br/>' + params.name + ' : ' + valueString + '(' + wan + '万)<br/>' +
                        '约' + ChinaPro.toFixed(2) + '个中国<br/>' +
                        '约' + ShandongPro.toFixed(2) + '个山东<br/>' +
                        '约' + TianjinPro.toFixed(2) + '个天津<br/>';
                    if (baseCountry != undefined && baseArea > 0) {
                        re += '约' + (value[0] / baseArea) + '个' + baseCountry;
                    }
                    return re;
                }
            },
            toolbox: {
                show: true,
                orient: 'vertical',
                left: 'right',
                top: 'center',
                feature: {
                    dataView: { readOnly: false },
                    restore: {},
                    saveAsImage: {}
                }
            },
        };

        // 使用刚指定的配置项和数据显示图表。
        myChart.setOption(option);

        myChart.on('click', function (param) {
            baseCountry = param.name;
            baseArea = param.value;
        });
    </script>

    @RenderBody()
</body>
</html>
