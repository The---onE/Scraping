@{
    Layout = "~/Views/Shared/WorldMap.cshtml";
    ViewBag.Title = "国土面积";
}

<script type="text/javascript">
    $(function () {
        $.ajax({
            url: "/Content/world_area.json",
            success: function (result) {
                dataOption = {
                    visualMap: {
                        min: 0,
                        max: 12000000,
                        text: ['High', 'Low'],
                        realtime: false,
                        calculable: true,
                        color: ['orangered', 'yellow', 'lightskyblue']
                    },
                    series: [
                        {
                            name: '国土面积',
                            type: 'map',
                            mapType: 'world',
                            roam: true,
                            itemStyle: {
                                emphasis: { label: { show: true } }
                            },
                            data: result
                        }
                    ]
                }

                myChart.setOption(dataOption);
            }

        });
    })
</script>